pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'leanhbao'                    // üëà T√†i kho·∫£n DockerHub th·∫≠t
        DOCKERHUB_CREDENTIALS = 'dockerhub-cred'       // üëà ID credentials trong Jenkins
        BACKEND_IMAGE = "${DOCKERHUB_USER}/backend"
        FRONTEND_IMAGE = "${DOCKERHUB_USER}/frontend"
        DEPLOY_PATH = "/opt/deploy/app"
    }

    stages {

        stage('Checkout Source') {
            steps {
                echo "üì¶ Cloning repository..."
                git branch: 'main', url: 'https://github.com/bao99257/cloud_springboot.git'
            }
        }

        stage('Build Backend') {
            steps {
                echo "üß± Building Spring Boot backend..."
                // ‚ùó D√πng Maven h·ªá th·ªëng, kh√¥ng d√πng mvnw wrapper
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "üê≥ Building Docker images..."
                script {
                    // Build backend (Dockerfile ·ªü th∆∞ m·ª•c backend)
                    sh "docker build -t ${BACKEND_IMAGE}:latest ./backend"
                    // Build frontend (Dockerfile ·ªü th∆∞ m·ª•c frontend)
                    sh "docker build -t ${FRONTEND_IMAGE}:latest ./frontend"
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo "üì§ Pushing images to DockerHub..."
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh """
                    echo $PASS | docker login -u $USER --password-stdin
                    docker push ${BACKEND_IMAGE}:latest
                    docker push ${FRONTEND_IMAGE}:latest
                    """
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                echo "üöÄ Deploying to production..."
                sh """
                cd ${DEPLOY_PATH}
                docker compose down || true
                docker compose pull
                docker compose up -d
                """
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment completed successfully!"
        }
        failure {
            echo "‚ùå Deployment failed. Check the logs for details."
        }
    }
}
